        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox Style="{StaticResource Breadcrumb}" Text="{Binding BardcrumbTitle}" />
            <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ContentRegion" />
        </Grid>
    </Grid>
</pu:WindowX>
