<?xml version="1.0" encoding="utf-8"?>
<CodeSnippet Format="1.0.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<Header>
		<SnippetTypes>
			<SnippetType>Expansion</SnippetType>
		</SnippetTypes>
		<Title>Prism Property Validation</Title>
		<Shortcut>proppv</Shortcut>
		<Author>justable</Author>
		<HelpUrl>
		</HelpUrl>
		<Description>Define a property with backing field with validation</Description>
	</Header>
	<Snippet>
		<Declarations>
			<Literal>
				<ID>fieldName</ID>
				<ToolTip>Replace with the field name</ToolTip>
				<Default>fieldName</Default>
				<Function>
				</Function>
			</Literal>
			<Literal>
				<ID>PropertyType</ID>
				<ToolTip>Replace with the property type</ToolTip>
				<Default>string</Default>
				<Function>
				</Function>
			</Literal>
			<Literal>
				<ID>PropertyName</ID>
				<ToolTip>Replace with the property name</ToolTip>
				<Default>PropertyName</Default>
				<Function>
				</Function>
			</Literal>
		</Declarations>
		<Code Language="CSharp">
			<![CDATA[
		private $PropertyType$ $fieldName$;
        public $PropertyType$ $PropertyName$
        {
            get { return $fieldName$; }
            set
            {
                SetProperty(ref $fieldName$, value);
                ValidateProperty(nameof($PropertyName$));
            }
        }$end$]]>
		</Code>
	</Snippet>
</CodeSnippet>